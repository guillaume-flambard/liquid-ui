{
  "name": "@liquid-ui/react",
  "version": "0.1.0",
  "description": "Beautiful Apple Liquid Glass components for React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react,react-dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react,react-dom",
    "lint": "eslint src",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "components",
    "liquid",
    "glass",
    "ui",
    "apple",
    "design-system",
    "backdrop-filter"
  ],
  "author": "Liquid UI Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@liquid-ui/core": "*",
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}