{
  "name": "@liquid-ui/core",
  "version": "0.1.0",
  "description": "Core liquid glass engine and design tokens for Liquid UI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.build.json",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "liquid",
    "glass",
    "ui",
    "apple",
    "design-tokens",
    "css",
    "backdrop-filter"
  ],
  "author": "Liquid UI Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}